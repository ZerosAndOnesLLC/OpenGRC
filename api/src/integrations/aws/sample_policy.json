{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "OpenGRCReadOnly",
      "Effect": "Allow",
      "Action": [
        "sts:GetCallerIdentity",

        "iam:GetAccountPasswordPolicy",
        "iam:GetAccountSummary",
        "iam:ListUsers",
        "iam:ListRoles",
        "iam:ListPolicies",
